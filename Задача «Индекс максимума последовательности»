print(index - 1)


elem = int(input())
num = 0
i = 0
max = 0
while elem != 0:
    if max < elem:
        max = elem
        num = i
    elem = int(input())
    i += 1
print(num)


max,i,imax = 0,-1,0
n = int(input())
while  n != 0:
    i += 1
    if n > max:
        imax = i
        max = n
    n = int(input())
print(imax)
