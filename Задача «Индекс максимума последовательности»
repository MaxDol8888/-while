i = int(input())
a = 0
b = 0
while i != 0:
    if i > b:
        b = i
        index = a
    a += 1
    i = int(input())
print(b,index)


max = 0
index_of_max = -1
element = -1
len = 0
while element != 0:
    element = int(input())
    if element > max:
        max = element
        index_of_max = len
    len += 1
print(index_of_max)


inp = 1
lst = []
while inp:
    inp = int(input())
    lst.append(inp)
print(max(lst), lst.index(max(lst)))


n = -1
m = 0
i = -1
