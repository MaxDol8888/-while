max = 0
element = -1
i=0
while element != 0:
    element = int(input())
    if element ==0:
        break
    if element%2 == 0:
        i+=1
print(i)


num_even = -1
element = -1
while element != 0:
    element = int(input())
    if element % 2 == 0:
        num_even += 1
print(num_even)


a = int(input())
q = 0
while a != 0:
    if a % 2 == 0:
        q+=1
    a = int(input())
print(q)


