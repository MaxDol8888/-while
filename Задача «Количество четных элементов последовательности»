n = int(input())
ans = 0
while n != 0:
     if n & 1 == False:
          ans += 1
     n = int(input())
print(ans)


k = 0
z = input()
while z!='0':
    if int(z)%2==0:
        k +=1
    z = input()
else:
    print(k)
